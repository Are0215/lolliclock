input
  width 200px
primary100 = #B3E5FC
primary500 = #03A9F4
primary700 = #0288D1
accent100 = #FFD180
accent200 = #FFAB40
accent400 = #FF9100
accent700 = #FF6C00
lightTextColor = #FFFFFF
secondaryTextColor = #727272
darkTextColor = #212121
dividerColor = #B6B6B6
lightGrey = #F6F6F6


.popover
  position absolute
  top 0
  left 0
  z-index 100
  display none
  max-width 200px
  // border 1px solid #ccc
  // border 1px solid rgba(0, 0, 0, .2)
  border-radius 2px
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26), 0 2px 10px 0 rgba(0, 0, 0, 0.16)
  font-family "Roboto", 'Helvetica Neue, Helvetica, Arial', sans-serif
  font-size 20px
  user-select none
  
.lolliclock-header
  background primary500
  height 85px    
  display flex
  color white
  font-size 2.3em
  font-weight 400
  align-items center
  justify-content center
.lolliclock-time
  display flex
  align-self center
.lolliclock-hours
  width 50px
  text-align right
  opacity .6
  cursor pointer
  // transition all 3000ms
  overflow hidden
  height 54px
  // transform scale(1)
.lolliclock-colon
  opacity .6
  cursor default
.lolliclock-minutes
  width 50px
  opacity .6
  cursor pointer
.lolliclock-am-pm
  cursor pointer
  font-size 10px
  position absolute
  top 50px
  left 160px
  opacity .6
// .scale
//   transform translate3d(0,-100px,0)
.text-primary
  opacity 1
  color #FFFFFF
.lolliclock-hours-old
  height 54px
  opacity 1
  transition all 350ms
.lolliclock-hours:hover .lolliclock-hours-old
  margin-top -54px
  opacity 0
.lolliclock-hours:hover .lolliclock-hours-new
  opacity 1
.lolliclock-hours-new
  opacity 0
  transition all 350ms
  
.popover-content
  padding 18px 14px
  

.lolliclock-plate
.lolliclock-canvas
.lolliclock-dial
  width 168px
  height 168px   
  
.lolliclock-plate  
  background rgb(240,240,240)
  border-radius 100%   
  position relative
.lolliclock-canvas
.lolliclock-dial
  position absolute   
.lolliclock-bearing
    fill black
    stroke-width 1
.lolliclock-canvas line
    stroke primary100
    stroke-width 1
    stroke-linecap round
.lolliclock-canvas-fg 
  stroke none
  fill primary700

.lolliclock-canvas-bg-trans 
  fill rgba(primary500, .25)    
 
.lolliclock-tick
  border-radius 100%
  color #666
  line-height 24px
  text-align center
  width 24px
  height 24px
  font-size .55em
  font-weight 600
  position absolute
  cursor pointer
  
.lolliclock-tick.active
.lolliclock-tick:hover
  background primary100
    
.lolliclock-ampm-block
  display flex
  justify-content space-around
    // font-size .8em
.lolliclock-ampm-btn
  position relative
  height 35px
  width 35px
  border-radius 100%
  font-size 12px
  font-weight 600
  cursor pointer

.lolliclock-btn-background
  position absolute
  height 35px
  width 35px  
  opacity 0
  transform scale(0)
  
.lolliclock-btn-text
  position absolute  
  width 100%
  text-align center
  line-height 35px
  vertical-align middle  
  color darkTextColor
        
.active-button-background
  background-color primary500
  border-radius 100%
  transition transform 150ms
  transform scale(1)
  opacity 1
.active-button-text
  color #FFFFFF     
    
.lolliclock-ampm-btn:focus
  outline 0

.clockpicker-clickable
    cursor pointer
    // must be above -moving
         
.clockpicker-moving
    cursor move 
    cursor -webkit-grabbing
    cursor -moz-grabbing
    
.hidden
    visibility hidden